{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@resource": ["resource"],
      "@entities": ["entities"],
      "@config": ["config"],
      "@graphqls": ["graphqls"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
